@model Graduation.Models.ESchoolInfoModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>就业签约管理</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
</head>
<body>
    <!-- Left column -->
    <div class="templatemo-flex-row">
        <div class="templatemo-sidebar">
            <header class="templatemo-site-header">
                <h1>华北电力大学</h1>
            </header>
            <div class="profile-photo-container">
                <img src="../../images/profile-photo.jpg" alt="Profile Photo" class="img-responsive">
                <div class="profile-photo-overlay"></div>
            </div>
            <div class="mobile-menu-icon">
                <i class="fa fa-bars"></i>
            </div>
            <nav class="templatemo-left-nav">
                <ul class="ly-ul-parent">
                    <li>
                        <a href="/FillBaseInfo/Index" class="active">
                            <i class="fa fa-home fa-fw"></i>
                            通知
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillBaseInfo">
                            <i class="fa fa-bar-chart fa-fw"></i>
                            基本信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillapplInfo">
                            <i class="fa fa-database fa-fw"></i>
                            求职信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/EmployInfo">
                            <i class="fa fa-map-marker fa-fw"></i>
                            就业信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillSignInfo">
                            <i class="fa fa-users fa-fw"></i>
                            签约登记管理
                        </a>
                    </li>
                    <li>
                        <a href="StudentLogin.html">
                            <i class="fa fa-sliders fa-fw"></i>
                            修改密码
                        </a>
                    </li>
                    <li>
                        <a href="StudentImg.html">
                            <i class="fa fa-eject fa-fw"></i>
                            上传照片
                        </a>
                    </li>
                    <li>
                        <a href="StudentLogin.html">
                            <i class="fa fa-user-md fa-fw"></i>
                            退出系统
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- Main content -->
        <div class="templatemo-content col-1 light-gray-bg">
            <div class="templatemo-top-nav-container">
                <h2>求职与就业信息管理系统</h2>
                <div class="right">
                    <span>用户信息：</span><span>学号：</span><span>&nbsp;&nbsp;</span><span class="admin">@ViewBag.number</span>
                </div>
            </div>
            <div class="templatemo-content-container now-position ly-tab">
                <span>当前位置：</span><span>毕业生登录>></span><span>本科转生求职与就业管理>></span><span>就业签约管理</span>
                <div class="content">
                    <h4>请选择入口：</h4>
                    <ul>
                        <li><a href="/FillBaseInfo/FillESchoolInfo">@Html.RadioButtonFor(model => model.Employment, "10签学校三方协议就业", new { @class="eschool"})签学校三方协议就业</a></li>
                        <li><a href="/FillBaseInfo/FillESchoolContractInfo">@Html.RadioButtonFor(model => model.Employment, "11签合同就业", new { @class="eschoolContract"})签合同就业</a></li>
                        <li>
                            <label>
                                @Html.RadioButtonFor(model => model.Employment, "12其他录用形式就业", new { @class = "other" })其他录用形式就业
                            </label>
                        </li>
                        <li><a href="/FillBaseInfo/FillNotJobInfo">@Html.RadioButtonFor(model => model.Employment, "70暂未就业", new { @class="notjob"})暂未就业 </a></li>
                    </ul>
                </div>
                @Html.HiddenFor(model => model.Employment, new { @class="xianshi"})
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            if ($(".xianshi").val() == "10签学校三方协议就业") {
                $(".eschool").attr("checked", true)
            }
           else if ($(".xianshi").val() == "11签合同就业") {
                $(".eschoolContract").attr("checked", true)
            }
           else if ($(".xianshi").val() == "70暂未就业") {
               $(".notjob").attr("checked", true)
           }
           else { $(".other").attr("checked", true) }
            $(".other").click(function () {
                if ($(".xianshi").val() == "46应征入伍")
                {
                    window.location.href = "/FillBaseInfo/FillEOtherArmyInfo";
                }
               else if ($(".xianshi").val() == "75自主创业")
                {
                    window.location.href = "/FillBaseInfo/FillEOtherSelfInfo";
                }
               else if ($(".xianshi").val() == "76灵活就业") {
                    window.location.href = "/FillBaseInfo/FillEOtherFlexibleInfo";
                }
               else if ($(".xianshi").val() == "80升学") {
                    window.location.href = "/FillBaseInfo/FillEOtherSchoolInfo";
                }
               else if ($(".xianshi").val() == "85出国") {
                    window.location.href = "/FillBaseInfo/FillEOtherAbroadInfo";
                }
               else if ($(".xianshi").val() == "50国家基层项目") {
                    window.location.href = "/FillBaseInfo/FillEOtherAbroadInfo";
                }
               else if ($(".xianshi").val() == "27科研助理") {
                    window.location.href = "/FillBaseInfo/FillEOtherAbroadInfo";
                }
               else if ($(".xianshi").val() == "51地方基层项目") {
                   window.location.href = "/FillBaseInfo/FillEOtherAbroadInfo";
               }
               else { window.location.href = "/FillBaseInfo/FillEOtherArmyInfo"; }
            })
        })

    </script>
</body>

</html>