@model Graduation.Models.ApplInfoViewModel

@if (ViewBag.type == "0" || ViewBag.numberCount == 12)
{
    ViewBag.type = "hidden";
}
else
{
    ViewBag.numberCount = "hidden";
}
@if (ViewBag.clocked == "锁定")
{
    ViewBag.clocked = "disabled";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>求职信息管理</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">

    <!-- <link href='http://fonts.useso.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'> -->
</head>
<body>
    <!-- Left column -->
    <div class="templatemo-flex-row">
        <div class="templatemo-sidebar">
            <header class="templatemo-site-header">
                <h1>华北电力大学</h1>
            </header>
            <div class="profile-photo-container">
                <img src="../../images/profile-photo.jpg" alt="Profile Photo" class="img-responsive">
                <div class="profile-photo-overlay"></div>
            </div>
            <div class="mobile-menu-icon">
                <i class="fa fa-bars"></i>
            </div>
            <nav class="templatemo-left-nav">
                <ul class="ly-ul-parent">
                    <li>
                        <a href="/FillBaseInfo/Index" class="active">
                            <i class="fa fa-home fa-fw"></i>
                            通知
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillBaseInfo">
                            <i class="fa fa-bar-chart fa-fw"></i>
                            基本信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillapplInfo">
                            <i class="fa fa-database fa-fw"></i>
                            求职信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/EmployInfo">
                            <i class="fa fa-map-marker fa-fw"></i>
                            就业信息管理
                        </a>
                    </li>
                    <li>
                        <a href="/FillBaseInfo/FillSignInfo">
                            <i class="fa fa-users fa-fw"></i>
                            签约登记管理
                        </a>
                    </li>
                    <li>
                        <a href="StudentLogin.html">
                            <i class="fa fa-sliders fa-fw"></i>
                            修改密码
                        </a>
                    </li>
                    <li>
                        <a href="StudentImg.html">
                            <i class="fa fa-eject fa-fw"></i>
                            上传照片
                        </a>
                    </li>
                    <li>
                        <a href="StudentLogin.html">
                            <i class="fa fa-user-md fa-fw"></i>
                            退出系统
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="templatemo-content col-1 light-gray-bg">
            <div class="templatemo-top-nav-container">
                <h2>求职与就业信息管理系统</h2>
                <div class="right">
                    <span>用户信息：</span><span>学号：</span><span>&nbsp;&nbsp;</span><span class="admin">@Html.ValueFor(model => model.upload.StudentNumber)</span>
                </div>
            </div>
            <div class="templatemo-content-container now-position ly-tab">
                <span>当前位置：</span><span>毕业生登录>></span><span>本科转生求职与就业管理>></span><span>求职信息管理</span>
                <div class="content">
                    <span class="marginLeft">允许操作时间：</span><span>起始时间：</span><span class="admin">2015/10/18 0:00:00</span><span>结束时间：</span><span class="admin">2016/8/5 23:59:34</span>
                    @using (@Html.BeginForm())
                    {
                    @Html.HiddenFor(model => model.applInfo.StudentNumber)
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <table class="informationTable table">
                        <thead>
                            <tr>
                                <td colspan="4" style="text-align:center"><b>教育背景</b></td>
                            </tr>
                        </thead>
                        <tr>
                            <td><span>学号：</span><span>@Html.ValueFor(model => model.upload.StudentNumber)</span></td>
                            <td><span>姓名：</span><span>@Html.ValueFor(model => model.upload.Name)</span></td>
                            <td><span>性别：</span><span>@Html.ValueFor(model => model.upload.Sex)</span></td>
                            <td rowspan="5">
                                <img src="images/person.jpg" />
                            </td>
                        </tr>
                        <tr>
                            <td><span>出生年月：</span><span>@Html.ValueFor(model => model.upload.BirthTime)</span></td>
                            <td><span>所在学院：</span><span>@Html.ValueFor(model => model.upload.Academy)</span></td>
                            <td><span>所在系：</span><span>@Html.ValueFor(model => model.upload.Department)</span></td>
                        </tr>
                        <tr>
                            <td><span>学制：</span><span>@Html.ValueFor(model => model.upload.LengthOfSch)</span></td>
                            <td><span>专业：</span><span>@Html.ValueFor(model => model.upload.Major)</span></td>
                            <td><span>学历：</span><span>@Html.ValueFor(model => model.upload.Education)</span></td>
                        </tr>
                        <tr>
                            <td><span>培养方式：</span><span>@Html.ValueFor(model => model.upload.TrainType)</span></td>
                            <td><span>定向或委培单位：</span><span>@Html.ValueFor(model => model.upload.Weituo)</span></td>
                            <td><span></span><span></span></td>
                        </tr>
                        <tr>
                            <td><span>入学年份：</span><span>@Html.ValueFor(model => model.upload.EntranceYear)</span></td>
                            <td><span>入学时间：</span><span>@Html.ValueFor(model => model.upload.EntranceTime)</span></td>
                            <td>
                                <span>毕业时间：</span><span>@Html.ValueFor(model => model.upload.GraduationTime)</span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <p>综合排名：</p>
                                @Html.TextBoxFor(model => model.applInfo.NumberN, new { required = "required" })
                                <span>/</span>
                                @Html.TextBoxFor(model => model.applInfo.NumberM, new { required = "required" })
                                <span><b>(请写成n/m格式)</b></span>
                                @Html.RadioButtonFor(model => model.applInfo.RankType, "1") 班级排名
                                @Html.RadioButtonFor(model => model.applInfo.RankType, "2") 专业排名
                            </td>
                            <td>
                                <p>在校任职情况：</p>

                                @Html.DropDownListFor(model => model.applInfo.PostAtSch, ViewBag.list as List<SelectListItem>)

                            </td>
                        </tr>
                        <tr style="text-align:center">
                            <td><b>教育背景</b></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>第一年度获奖（评优，荣誉，奖学金）</p>
                                @Html.TextAreaFor(model => model.applInfo.FristYearPrize, new { required = "required" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>第二年度获奖（评优，荣誉，奖学金）</p>
                                @Html.TextAreaFor(model => model.applInfo.SecondYearPrize, new { required = "required" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>第三年度获奖（评优，荣誉，奖学金）</p>
                                @Html.TextAreaFor(model => model.applInfo.ThirdYearPrize, new { required = "required" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>2.竞赛获奖情况：</p>
                                @Html.TextAreaFor(model => model.applInfo.CompetitionPrize)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>3.其他获奖情况：</p>
                                @Html.TextAreaFor(model => model.applInfo.OtherPrize)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>4.发表论文和学术成果：</p>
                                @Html.TextAreaFor(model => model.applInfo.PublishPaper)
                            </td>
                        </tr>
                    </table>
                    //本科生能力特长
                    <table class="informationTable table" @ViewBag.numbercount>
                        <tr style="text-align:center">
                            <td><b>能力特长</b></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>外语语种：英语通过级别：</span>
                                @Html.DropDownListFor(model => model.applInfo.EnglishLevel, ViewBag.english as List<SelectListItem>
                                    )
                                    <span>四级成绩：</span>@Html.TextBoxFor(model => model.applInfo.LevelFour)
                                    <span>六级成绩：</span>@Html.TextBoxFor(model => model.applInfo.LevelSix)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>计算机级别：</span>@Html.TextBoxFor(model => model.applInfo.ComputerLevel)
                            </td>
                        </tr>
                    </table>
                    //研究生能力特长
                    <table class="informationTable table" @ViewBag.type>
                        <tr style="text-align:center">
                            <td><b>能力特长</b></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                1.主修外语注：非英英语专业填写"CET-4","CET-6";英语专业填写"TEM-4","TEM-8","无",其他语种毕业生填写“——”
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                语种：语言考试分数：@Html.TextBoxFor(model => model.applInfo.LanguageScore)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>计算机水平：</span>@Html.TextAreaFor(model => model.applInfo.ComputerLevel)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>特长能力：</span>@Html.TextAreaFor(model => model.applInfo.SpecialtyAbilty)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>社会工作：</span>@Html.TextAreaFor(model => model.applInfo.SocietyJob)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>实践活动：</span>@Html.TextAreaFor(model => model.applInfo.PracticeActivity)
                            </td>
                        </tr>
                    </table>


                    <table class="informationTable table">
                        <tr style="text-align:center">
                            <td><b>求职备注</b></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                @Html.TextAreaFor(model => model.applInfo.ApplNote)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <input type="submit" value="提交" class="btn btn-warning" @ViewBag.clocked>
                            </td>
                        </tr>
                    </table>
                    }
                    @*本科生*@
                    <table class="informationTable table" @ViewBag.numbercount>
                        <tr style="text-align:center">
                            <td colspan="4">
                                <b>综合评测档次</b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <p>院系鉴定意见：注：学生不能编辑，此项由院系给出</p>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:130px">
                                <span>1.业务素质</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.StudyTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.StudyTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.StudyTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <span>2.思想道德素质表现</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.MoralTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.MoralTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.MoralTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <span>3.科技创新能力</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <span>4.社会活动能力</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.ActTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.ActTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.ActTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <span>5.文化素质</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.CultureTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.CultureTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.CultureTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <span>6.身心素质</span>
                            </td>
                            <td>
                                @Html.RadioButtonFor(model => model.applInfo.HealthTest, "0", new { disabled = false }) 优
                                @Html.RadioButtonFor(model => model.applInfo.HealthTest, "1", new { disabled = false }) 良
                                @Html.RadioButtonFor(model => model.applInfo.HealthTest, "2", new { disabled = false }) 中
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>综合测评结果：</span>
                                @Html.RadioButtonFor(model => model.applInfo.TotalTest, "0", new {disabled = false  }) 优
                                @Html.RadioButtonFor(model => model.applInfo.TotalTest, "1", new {disabled = false  }) 良
                                @Html.RadioButtonFor(model => model.applInfo.TotalTest, "2", new {disabled = false  }) 中
                            </td>
                        </tr>
                    </table>

                    <table class="informationTable table" @ViewBag.type>
                        <tr style="text-align:center">
                            <td><b>学校推荐意见</b></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>院系鉴定意见： 注：学生不能编辑，该项由院系给出</span>@Html.TextAreaFor(model => model.applInfo.AcademicOpinion, new { @readonly = "readonly" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>导师意见:注：学生不能编辑，该项由导师给出</span>@Html.TextAreaFor(model => model.applInfo.TutorOpinion, new { @readonly = "readonly" })
                            </td>
                        </tr>
                    </table>

                    <table class="informationTable table">
                        <tr>
                            <td><span>信息当前状态：注：由管理员设置</span></td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <span>是否通过审核：</span>
                                @Html.RadioButtonFor(model => model.applInfo.IsQiuChecked, "1",  new {disabled = false  }) 是
                                @Html.RadioButtonFor(model => model.applInfo.IsQiuChecked, "0", new { disabled = false }) 否
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Main content -->

    </div>
</body>
</html>