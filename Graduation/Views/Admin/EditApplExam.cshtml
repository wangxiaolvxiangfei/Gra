@model Graduation.Models.ApplInfoViewModel

@{
    Layout = "~/Views/Shared/Guide.cshtml";
}
@if (ViewBag.type == "1")
{
    ViewBag.type = "display:none";
}

<div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-top-nav-container">
        <h2>求职与就业信息管理系统</h2>
        <div class="right">
            <span>欢迎&nbsp;&nbsp;</span><span class="admin">就业中心管理员：</span><span class="admin">Admin</span><span>&nbsp;&nbsp;登录本系统</span>
        </div>
    </div>
    <div class="templatemo-content-container now-position ly-tab">
        <!--  <span>当前位置：</span><span>管理员登录>></span><span>本科转生求职与就业管理>></span><span><a href="StudentJobInformation.html">就业签约管理>></a></span><span>无协议书就业</span> -->
        <div class="content">
            @using (@Html.BeginForm("EditApplExam", "Admin", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.applInfo.StudentNumber)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <table class="informationTable table">
                    <thead>
                        <tr>
                            <td colspan="8" style="text-align:center">
                                <b>
                                    华北电力大学本专科毕业生求职信息（推荐表）
                                </b>
                            </td>
                        </tr>
                    </thead>
                    <tr>
                        <td rowspan="2" style="width:10px; border-right:1px solid black">毕业生信息</td>
                        <td><span>姓名：</span><span>@Html.ValueFor(model => model.upload.Name)</span></td>
                        <td><p>学号：</p><span>@Html.ValueFor(model => model.upload.StudentNumber)</span></td>
                        <td><p>出生年月日：</p><span>@Html.ValueFor(model => model.upload.BirthTime)</span></td>
                        <td>
                            <p>政治面貌：</p>
                            @ViewBag.P
                        </td>
                        <td>
                            <p>健康状况：</p>@ViewBag.H
                        </td>
                        <td>
                            <p>邮政编码</p>@ViewBag.E
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <p>通讯地址：</p>@ViewBag.CA
                        </td>
                        <td colspan="2">
                            <p>现家庭居住地：</p>@ViewBag.F
                        </td>
                        <td>
                            <p>Email：</p>@ViewBag.E
                        </td>
                        <td>
                            <p>联系电话：</p>@ViewBag.T
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="9" style="width:10px; border-right:1px solid black">教育背景</td>
                        <td colspan="2">
                            <span>专业：</span><span>@Html.ValueFor(model => model.upload.MajorDirection)</span>
                        </td>
                        <td>
                            <span>学历：</span><span>@Html.ValueFor(model => model.upload.Education)</span>
                        </td>
                        <td>
                            <span>培养方式：</span><span>@Html.ValueFor(model => model.upload.TrainType)</span>
                        </td>
                        <td>
                            <span>毕业时间：</span><span>@Html.ValueFor(model => model.upload.GraduationTime)</span>
                        </td>
                        <td>
                            <p>成绩班级名次</p>
                            @Html.TextBoxFor(model => model.applInfo.Rank)
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="8" style="border-right:1px solid black; text-align:center">获奖情况</td>
                        <td colspan="5">
                            <p>1.校内评优（本科生分年度，专科生填写第一框就行了）</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <p>第一年度</p>
                            @Html.TextAreaFor(model => model.applInfo.FristYearPrize)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <p>第二年度</p>
                            @Html.TextAreaFor(model => model.applInfo.SecondYearPrize)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <p>第三年度</p>
                            @Html.TextAreaFor(model => model.applInfo.ThirdYearPrize)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            2.竞赛获奖情况
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <textarea></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <p>3.其他获奖情况</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <textarea></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="8" style="width:10px; border-right:1px solid black">能力特长</td>
                        <td colspan="6">
                            <p>1.主修外语语种：水平</p>@Html.TextBoxFor(model => model.applInfo.EnglishLevel)
                            <p>注：非英语专业填写：“CET-4”,"CET-6","无"，英语专业填写“TEM-4”,"TEM-8","无",其他语种毕业填写"--"</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <p>2.计算机水平</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            @Html.TextBoxFor(model => model.applInfo.ComputerLevel)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <p>3.特长能力</p>
                            <textarea></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <p>4.社会工作</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <textarea></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <p>5.实践活动</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <textarea></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="7" style="width:10px; border-right:1px solid black">学校推荐意见</td>
                        <td colspan="6">院（系）鉴定意见</td>
                    </tr>
                    <tr>
                        <td colspan="2">1.业务素质</td>
                        <td colspan="4">
                            @Html.RadioButtonFor(model => model.applInfo.StudyTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.StudyTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.StudyTest, "3")中
                        </td>

                    </tr>
                    <tr>
                        <td colspan="2">2.思想道德素质表现</td>
                        <td colspan="4">

                            @Html.RadioButtonFor(model => model.applInfo.MoralTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.MoralTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.MoralTest, "3")中
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">3.科技创新能力</td>
                        <td colspan="4">

                            @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.ScienceTest, "3")中
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">4.社会活动能力</td>
                        <td colspan="4">

                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "3")中
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">5.文化素质</td>
                        <td colspan="4">

                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.ActTest, "3")中
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">6.身心素质</td>
                        <td colspan="4">

                            @Html.RadioButtonFor(model => model.applInfo.HealthTest, "1")优
                            @Html.RadioButtonFor(model => model.applInfo.HealthTest, "2")良
                            @Html.RadioButtonFor(model => model.applInfo.HealthTest, "3")中
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="3" style="width:10px; border-right:1px solid black">设置</td>
                        <td colspan="6">
                            <span>是否通过审核</span>
                            <input type="radio" name="type7">是
                            <input type="radio" name="type7">否
                            @Html.RadioButtonFor(model => model.applInfo.IsQiuChecked, "1")是
                            @Html.RadioButtonFor(model => model.applInfo.IsQiuChecked, "0", new { @checked = true })否
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <span>是否对外显示</span>
                            <input type="radio" name="type8">是
                            <input type="radio" name="type8" checked>否
                            <textarea placeholder="若不对外显示请填写原因，对外显示则不填写"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <span>是否锁定</span>
                            <input type="radio" name="type9">是
                            <input type="radio" name="type9" checked>否
                            <p>锁定后学生将不可以编辑以上的信息</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7">
                            <button class="btn btn-info">提交</button>
                            <span>提交了“提交测评”之外的所有修改</span>
                            <a href="#">返回上一页</a>
                        </td>
                    </tr>
                </table>
            }
        </div>

        <footer class="text-right"></footer>
    </div>
</div>