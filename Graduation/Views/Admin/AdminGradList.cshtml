            });
        });
        function GetDepart() {
            $("#Depart").empty();
            $.getJSON(
            "/Admin/GetDepartList",
            { pid: $("#Aca").val() },
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").val(item["Id"]).text(item["Name"]).appendTo($("#Depart"));

