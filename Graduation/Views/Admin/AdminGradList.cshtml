        <script type="text/javascript">
        $(function () {
            GetAca();
            $("#Depart").empty();
            $("#Major").empty();
            $("#Aca").change(function () {
                GetDepart();
            });
            $("#Depart").change(function () {
                GetMajor();
            });
        });
        //获取院
        function GetAca() {
            $("#Aca").empty();
            $.getJSON(
            "/Admin/GetAcalist",
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").val(item["Id"]).text(item["Name"]).appendTo($("#Aca"));

                })
            });
        }

        //获取系
        function GetDepart() {
            $("#Depart").empty();
            $.getJSON(
            "/Admin/GetDepartList",
            { pid: $("#Aca").val() },
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").val(item["Id"]).text(item["Name"]).appendTo($("#Depart"));

                })
            });
        }
        //获取专业
        function GetMajor() {
            $("#Major").empty();
            $.getJSON(
            "/Admin/GetMajorList",
            { pid: $("#Depart").val() },
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").val(item["Id"]).text(item["Name"]).appendTo($("#Major"));

                })
            });
        }
    </script> 
    }
