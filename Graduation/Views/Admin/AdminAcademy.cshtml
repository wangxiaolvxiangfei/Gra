                    <div class="form-group">
                        <label for="exampleInputAmount">学院名称：</label>
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Academy.Name, new { @class = "form-control indexInput", placeholder = "学院名称", required = "required" })
                            
                        </div>
                    </div>
