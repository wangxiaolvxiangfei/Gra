                                <th>学院名称</th>
                                <th>选择</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                        @foreach (var temp in Model.AcademyList)
                        {
                            <tr>
                                <td class="index">@temp.Id</td>
                                <td>@temp.Name</td>
                                <td>@Html.ActionLink("选择", "AdminAcademy", new { Id = temp.Id })</td>
