@model Graduation.Models.ESchoolInfoViewModel
@{
    Layout = "~/Views/Shared/Guide.cshtml";
}
@if (ViewBag.type == "1")
{
    ViewBag.type = "display:none";
}
<div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-top-nav-container">
        <h2>求职与就业信息管理系统</h2>
        <div class="right">
            <span>欢迎&nbsp;&nbsp;</span><span class="admin">就业中心管理员：</span><span class="admin">Admin</span><span>&nbsp;&nbsp;登录本系统</span>
        </div>
    </div>
    <div class="templatemo-content-container now-position ly-tab">
        <!--  <span>当前位置：</span><span>管理员登录>></span><span>本科转生求职与就业管理>></span><span><a href="StudentJobInformation.html">就业签约管理>></a></span><span>无协议书就业</span> -->
        <div class="content">
            <p><b class="warn">1.就业形势：(必选)</b></p>
            @using (@Html.BeginForm())
            {
                @Html.HiddenFor(model => model.eSchoolInfo.StudentNumber)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <p class="a">


                    <a href="/Admin/EmplESchoolExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "有协议就业/合同就业") 有协议就业/合同就业</a>
                    <a href="/Admin/EmplArmyExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "其他形式就业", new { @checked = true }) 其他形式就业</a>
                    <a href="/Admin/EmplNotJobExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "暂未就业") 暂未就业</a>


                </p>

                <table class="table">
                    <thead>
                        <tr>
                            <td colspan="4" style="text-align:center"><b>个人信息</b></td>
                        </tr>
                    </thead>
                    <tr>
                        <td><span>学号：</span><span>@Html.ValueFor(model => model.upload.StudentNumber)</span></td>
                        <td><span>姓名：</span><span>@Html.ValueFor(model => model.upload.Name)</span></td>
                        <td><span>性别：</span><span>@Html.ValueFor(model => model.upload.Sex)</span></td>
                        <td><span>出生年月：</span><span>@Html.ValueFor(model => model.upload.BirthTime)</span></td>
                    </tr>
                    <tr>
                        <td><span>政治面貌：</span><span>@ViewBag.P</span></td>
                        <td><span>专业：</span><span>@Html.ValueFor(model => model.upload.Major)</span></td>
                        <td><span>培养方式：</span><span>@Html.ValueFor(model => model.upload.TrainType)</span></td>
                        <td><span>学历：</span><span>@Html.ValueFor(model => model.upload.Education)</span></td>
                    </tr>
                    <tr>
                        <td><span>学制：</span><span>@Html.ValueFor(model => model.upload.LengthOfSch)</span></td>
                        <td><span>毕业时间：</span><span>@Html.ValueFor(model => model.upload.GraduationTime)</span></td>
                        <td colspan="2"><span>生源地区：</span><span>@ViewBag.L</span></td>
                    </tr>
                    <tr>
                        <td><span>健康状况：</span><span>@ViewBag.H</span></td>
                        <td><span>手机号码：</span><span>@ViewBag.T</span></td>
                        <td><span>家庭所在地：</span><span>@ViewBag.FL</span></td>
                    </tr>
                    <tr>
                        <td colspan="3"><span>通信地址：</span><span>@ViewBag.ADDR</span></td>
                        <td><span>邮政编码</span><span>@ViewBag.C</span></td>
                    </tr>
                    <tr>
                        <td colspan="4" style="text-align:center"><span><b>毕业去向</b></span></td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <span>就业形式：</span>


                            <a href="/Admin/EmplArmyExam"> @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "46应征入伍", new { @checked = true }) 应征入伍</a>

                            <a href="/Admin/EmplSelfExam/">  @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "75自主创业") 自主创业</a>
                            <a href="/Admin/EmplFlexibleExam">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "76灵活就业") 灵活就业</a>
                            <a href="/Admin/EmplUpSchExam">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "80升学") 升学</a>
                            <a href="/Admin/EmplAbroadExam">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "85出国") 出国</a>
                            <a href="/Admin/EmplCountry">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "50国家基层项目") 国家基层项目</a>
                            <a href="/Admin/EmplScience">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "27科研助理") 科研助理</a>
                            <a href="/Admin/EmplPlace">   @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "51地方基层项目", new { @checked=true}) 地方基层项目</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><span>项目名称：</span>@Html.TextBoxFor(model => model.eSchoolInfo.ProjectName)</td>
                        <td colspan="2">
                            <p>项目所在地：</p>
                            <select class="province"></select>
                            <select class="city"></select>
                            <select class="country"></select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <p>备注：</p>
                            @Html.TextAreaFor(model => model.eSchoolInfo.Note)
                        </td>
                    </tr>

                </table>
                <table class="table table5">
                    <tr>
                        <td>是否通过审核</td>
                        <td colspan="3">
                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsChecked, "是")是
                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsChecked, "否")否
                        </td>
                    </tr>
                    <tr>
                        <td>是否锁定</td>
                        <td colspan="3">
                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsClock, "锁定")锁定
                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsClock, "可编辑")可编辑
                        </td>
                    </tr>
                    <tr>
                        <td>就业状态</td>
                        <td colspan="3">

                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsJiuYe, "是")是
                            @Html.RadioButtonFor(model => model.eSchoolInfo.IsJiuYe, "否")否
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <input type="submit" value="提交" class="btn btn-info" />
                        </td>
                    </tr>
                </table>
            }

        </div>

    </div>
</div>