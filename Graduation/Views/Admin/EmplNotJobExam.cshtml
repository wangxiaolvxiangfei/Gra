@model Graduation.Models.ESchoolInfoViewModel

@{
    Layout = "~/Views/Shared/Guide.cshtml";
}
@if (ViewBag.type == "1")
{
    ViewBag.type = "display:none";
}
<div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-top-nav-container">
        <h2>求职与就业信息管理系统</h2>
        <div class="right">
            <span>欢迎&nbsp;&nbsp;</span><span class="admin">就业中心管理员：</span><span class="admin">Admin</span><span>&nbsp;&nbsp;登录本系统</span>
        </div>
    </div>
    <div class="templatemo-content-container now-position ly-tab">
        <!--  <span>当前位置：</span><span>管理员登录>></span><span>本科转生求职与就业管理>></span><span><a href="StudentJobInformation.html">就业签约管理>></a></span><span>无协议书就业</span> -->
        <div class="content">
            <p><b class="warn">1.就业形势：(必选)</b></p>
            @using (@Html.BeginForm())
            {
                @Html.HiddenFor(model => model.eSchoolInfo.StudentNumber)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <p class="a">


                    <a href="/Admin/EmplESchoolExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "有协议就业/合同就业") 有协议就业/合同就业</a>
                    <a href="/Admin/EmplArmyExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "其他形式就业") 其他形式就业</a>
                    <a href="/Admin/EmplNotJobExam">@Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "暂未就业", new { @checked = true }) 暂未就业</a>


                </p>

                <table class="table">
                    <thead>
                        <tr>
                            <th colspan="4" style="text-align:center">个人信息</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span>学号：</span><span>@Html.ValueFor(model => model.upload.StudentNumber)</span></td>
                            <td><span>姓名：</span><span>@Html.ValueFor(model => model.upload.Name)</span></td>
                            <td><span>性别：</span><span>@Html.ValueFor(model => model.upload.Sex)</span></td>
                            <td><span>出生年月：</span><span>@Html.ValueFor(model => model.upload.BirthTime)</span></td>
                        </tr>
                        <tr>
                            <td><span>政治面貌：</span><span>@ViewBag.P</span></td>
                            <td><span>专业：</span><span>@Html.ValueFor(model => model.upload.Major)</span></td>
                            <td><span>培养方式：</span><span>@Html.ValueFor(model => model.upload.TrainType)</span></td>
                            <td><span>学历：</span><span>@Html.ValueFor(model => model.upload.Education)</span></td>
                        </tr>
                        <tr>
                            <td>
                                <span>学制：</span><span>@Html.ValueFor(model => model.upload.LengthOfSch)</span>
                            </td>
                            <td>
                                <span>毕业时间：</span><span>@Html.ValueFor(model => model.upload.GraduationTime)</span>
                            </td>
                            <td>
                                <span>生源地区：</span><span>@ViewBag.L</span>
                            </td>
                            <td>
                                <span>身份证号：</span><span>@Html.ValueFor(model => model.upload.IDNumber)</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>健康状况：</span><span>@ViewBag.H</span>
                            </td>
                            <td>
                                <span>手机号码：</span><span>@ViewBag.T</span>
                            </td>
                            <td>
                                <span>邮政编码：</span><span>@ViewBag.C</span>
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <span>通信地址：</span><span>@ViewBag.ADDR</span>
                            </td>
                            <td colspan="2">
                                <span>家庭所在地</span><span>@ViewBag.FL</span>
                            </td>

                        </tr>
                    </tbody>
                </table>
                <table class="table table1">
                    <tr>
                        <td colspan="3" style="text-align:center"><span><b>就业去向</b></span></td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <span>就业形式：</span>
                            @*<input type="radio" name="jobPosition">就业困难
                                <input type="radio" name="jobPosition">继续考公务员
                                <input type="radio" name="jobPosition">继续考研
                                <input type="radio" name="jobPosition">其他*@
                            @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "就业困难")就业困难
                            @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "继续考公务员")继续考公务员
                            @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "继续考研")继续考研
                            @Html.RadioButtonFor(model => model.eSchoolInfo.Employment, "其他")其他

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>档案转寄地址：</span>@Html.TextBoxFor(model => model.eSchoolInfo.FileChangedAdd)
                        </td>
                        <td>
                            <span>档案转寄邮编：</span>@Html.TextBoxFor(model => model.eSchoolInfo.FileZipCode)
                        </td>
                        <td>
                            <span>户口迁移地址：</span>@Html.TextBoxFor(model => model.eSchoolInfo.ResChangedAdd)
                        </td>
                    </tr>

                </table>

                <table class="table table5">
                    <tr>
                        <td>是否通过审核</td>
                        <td colspan="3">
                            <input type="radio" name="type2">是
                            <input type="radio" name="type2">否
                        </td>
                    </tr>
                    <tr>
                        <td>是否锁定</td>
                        <td colspan="3">
                            <input type="radio" name="type3">是
                            <input type="radio" name="type3">否
                        </td>
                    </tr>
                    <tr>
                        <td>就业状态</td>
                        <td colspan="3">
                            <input type="radio" name="type4">是
                            <input type="radio" name="type4">否
                        </td>
                    </tr>
                    <tr>
                        <td>是否对外显示</td>
                        <td colspan="3">
                            <input type="radio" name="type5">是
                            <input type="radio" name="type5">否
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <input type="submit" value="提交" class="btn btn-info" />
                        </td>
                    </tr>
                </table>
            }
        </div>


        <footer class="text-right"></footer>
    </div>
</div>