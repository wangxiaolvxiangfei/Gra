@model Graduation.Models.SignInfoViewModel
@{
    Layout = "~/Views/Shared/Guide.cshtml";
}
@if (ViewBag.type == "1")
{
    ViewBag.type = "display:none";
}

<div class="templatemo-content col-1 light-gray-bg">
    <div class="templatemo-top-nav-container">
        <h2>求职与就业信息管理系统</h2>
        <div class="right">
            <span>欢迎&nbsp;&nbsp;</span><span class="admin">就业中心管理员：</span><span class="admin">Admin</span><span>&nbsp;&nbsp;登录本系统</span>
        </div>
    </div>
    @using (@Html.BeginForm())
    {
        @Html.HiddenFor(model => model.upload.StudentNumber)
        @Html.HiddenFor(model => model.signInfo.StudentNumber)
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="templatemo-content-container now-position">
            <div class="panel panel-default table-responsive clear">
                <table class="table table-striped table-bordered templatemo-user-table table-hover .houtai-table">
                    <tr>
                        <td><p>姓名：</p><span>@Html.ValueFor(model => model.upload.Name)</span></td>
                        <td><p>学号：</p><span>@Html.ValueFor(model => model.upload.StudentNumber)</span></td>
                        <td><p>学历：</p><span>@Html.ValueFor(model => model.upload.Education)</span></td>
                    </tr>
                    <tr>
                        <td><p>院：</p><span>@Html.ValueFor(model => model.upload.Academy)</span></td>
                        <td><p>系：</p><span>@Html.ValueFor(model => model.upload.Department)</span></td>
                        <td><p>班级：</p><span>@Html.ValueFor(model => model.upload.Class)</span></td>
                    </tr>
                    <tr>
                        <td><p>登记日期：</p>@Html.TextBoxFor(model => model.signInfo.SignTime)</td>
                        <td><p>单位名称：</p>@Html.TextBoxFor(model => model.signInfo.CompanyName)</td>
                        <td>
                            <p>所属集团或系统：</p>
                            @Html.DropDownListFor(model => model.signInfo.ComBelongGroup, ViewBag.Group as List<SelectListItem>)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <p>单位性质：</p>
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "10机关")机关
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "20科研设计单位")科研设计单位
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "21高等教育单位")高等教育单位
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "22中初教育单位")中初教育单位
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "23医疗卫生单位")医疗卫生单位
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "29其他事业单位")其他事业单位
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "31国有企业")国有企业
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "32三资企业")三资企业
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "39其他企业")其他企业
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "40部队")部队
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "55农村建设")农村建设
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "56城镇社区")城镇社区
                            @Html.RadioButtonFor(model => model.signInfo.ComType, "99其他")其他
                        </td>
                        <td>
                            <p>隶属部门：</p>
                          @Html.DropDownListFor(model=>model.signInfo.ComBelongDepCode,ViewBag.belong as List<SelectListItem>)
                        </td>
                    </tr>
                    <tr>
                        <td><p>单位地址：</p>@Html.TextBoxFor(m => m.signInfo.CompanyAddress)</td>
                        <td><p>单位联系人：</p>@Html.TextBoxFor(m => m.signInfo.CompanyConn)</td>
                        <td><p>单位电话：</p>@Html.TextBoxFor(m => m.signInfo.CompanyTel)</td>
                    </tr>
                    <tr>
                        <td><p>个人联系方式：</p>@Html.TextBoxFor(m => m.signInfo.PerTelType)</td>
                        <td><p>签约方式：</p>@Html.DropDownListFor(model => model.signInfo.SignType, ViewBag.signType as List<SelectListItem>)</td>
                        <td><p>协议书编号：</p>@Html.TextBoxFor(m => m.signInfo.AgreementID)</td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <span>审核状态</span>
                            @Html.RadioButtonFor(model=>model.signInfo.IsChecked,"是")是
                            @Html.RadioButtonFor(model=>model.signInfo.IsChecked,"否")否
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <span>锁定状态</span>
                            @Html.RadioButtonFor(model=>model.signInfo.IsClocked,"锁定")锁定
                            @Html.RadioButtonFor(model=>model.signInfo.IsClocked,"可编辑")可编辑
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <button class="btn btn-success" type="submit">修改</button>
                        </td>
                    </tr>
                </table>
            </div>
            <div>
            </div>
        </div>
    }
</div>